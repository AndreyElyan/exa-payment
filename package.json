{
  "name": "exa-payment-monorepo",
  "version": "0.0.1",
  "description": "Sistema de pagamentos com Clean Architecture e DDD",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "node build.js",
    "build:nest": "nest build",
    "dev:api": "nest start api --debug --watch",
    "dev:consumer": "nest start consumer --debug --watch",
    "dev": "concurrently \"nest start api --debug --watch\" \"nest start consumer --debug --watch\"",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose apps/api/src/domain/value-objects/__tests__/cpf.vo.spec.ts apps/api/src/domain/services/__tests__/idempotency.service.spec.ts apps/api/src/application/use-cases/__tests__/create-payment.use-case.spec.ts apps/api/src/application/use-cases/__tests__/update-payment.use-case.spec.ts apps/api/src/domain/entities/__tests__/payment.entity.spec.ts",
    "test:e2e": "vitest run --reporter=verbose apps/api/test-e2e/payment.e2e-spec.ts apps/api/test-e2e/payment-update.e2e-spec.ts",
    "test:performance": "vitest run --reporter=verbose apps/api/test-e2e/performance.e2e-spec.ts",
    "test:all": "pnpm test:unit && pnpm test:e2e && pnpm test:performance",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,apps,libs,test}/**/*.{ts,js,json}\"",
    "prepare": "husky install",
    "docker:up": "docker compose -f dev/docker-compose.yml up -d",
    "docker:down": "docker compose -f dev/docker-compose.yml down -v"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.0.0",
    "@prisma/client": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "prisma": "^5.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@angular-devkit/core": "^20.3.3",
    "@angular-devkit/schematics": "^20.3.3",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cli-table3": "^0.6.5",
    "concurrently": "^9.0.0",
    "debug": "^4.4.3",
    "dotenv": "^16.4.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.0",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4",
    "zod": "^3.23.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
