{
  "name": "exa-payment",
  "version": "1.0.0",
  "description": "Sistema de pagamentos com Clean Architecture e DDD",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "clean": "node scripts/clean.js",
    "dev": "pnpm --filter api dev",
    "build": "pnpm --filter api build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter api test:e2e",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "prisma:migrate": "pnpm --filter api prisma:migrate",
    "prisma:seed": "pnpm --filter api prisma:seed",
    "export:ndjson": "pnpm --filter api export:ndjson",
    "export:parquet": "pnpm --filter api export:parquet"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "tslib": "^2.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
