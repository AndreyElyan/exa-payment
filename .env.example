# ===========================================
# EXA PAYMENT - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5050
CONSUMER_PORT=5051

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database (Main Application Database)
DATABASE_URL=postgresql://app:app@localhost:5434/payments

# MongoDB Database (Consumer/Audit Database)
MONGODB_URL=mongodb://localhost:27017/payments_audit

# ===========================================
# MESSAGE QUEUE CONFIGURATION
# ===========================================
# RabbitMQ Configuration
RABBITMQ_URL=amqp://app:app@localhost:5674

# ===========================================
# TEMPORAL WORKFLOW CONFIGURATION
# ===========================================
# Temporal Server Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# ===========================================
# MERCADO PAGO CONFIGURATION
# ===========================================
# Mercado Pago API Configuration
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_BASE_URL=https://api.mercadopago.com
MERCADO_PAGO_TIMEOUT=3000
MERCADO_PAGO_MAX_RETRIES=3


# ===========================================
# STUB PROVIDER CONFIGURATION (Testing)
# ===========================================
# Stub Payment Provider Configuration
STUB_SIMULATE_TIMEOUT=false
STUB_SIMULATE_ERROR=false
STUB_ERROR_RATE=0.0
STUB_TIMEOUT_DELAY=5000
STUB_RESPONSE_DELAY=100



# ===========================================
# DOCKER COMPOSE SERVICES
# ===========================================
# PostgreSQL (Docker Service)
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=payments

# RabbitMQ (Docker Service)
RABBITMQ_DEFAULT_USER=app
RABBITMQ_DEFAULT_PASS=app

# MongoDB (Docker Service)
MONGO_INITDB_ROOT_USERNAME=app
MONGO_INITDB_ROOT_PASSWORD=app
MONGO_INITDB_DATABASE=payments_audit

# Temporal (Docker Service)
TEMPORAL_DB=postgres12
TEMPORAL_DB_PORT=5432
TEMPORAL_POSTGRES_USER=app
TEMPORAL_POSTGRES_PWD=app
TEMPORAL_POSTGRES_SEEDS=postgres
TEMPORAL_POSTGRES_DB=temporal

# Jaeger (Docker Service)
COLLECTOR_OTLP_ENABLED=true

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
# Test Environment
TEST_DATABASE_URL=postgresql://app:app@localhost:5434/payments_test

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
# Jaeger Tracing
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=14268
JAEGER_SERVICE_NAME=exa-payment-api


