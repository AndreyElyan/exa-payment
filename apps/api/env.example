# ===========================================
# CONFIGURAÇÃO ESSENCIAL - DESENVOLVIMENTO LOCAL
# ===========================================

# Aplicação
PORT=5050
NODE_ENV=development

# Banco de Dados (Docker local)
DATABASE_URL="postgresql://app:app@localhost:5434/payments"

# ===========================================
# MERCADO PAGO - INTEGRAÇÃO ESSENCIAL
# ===========================================

# Credenciais do Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=APP
MERCADO_PAGO_PUBLIC_KEY=APP
MERCADO_PAGO_BASE_URL=https://api.mercadopago.com

# Configurações de timeout e retry
MERCADO_PAGO_TIMEOUT=3000
MERCADO_PAGO_MAX_RETRIES=3

# ===========================================
# TEMPORAL WORKFLOW CONFIGURATION
# ===========================================

# Temporal server address
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# ===========================================
# CONFIGURAÇÕES DE COMPORTAMENTO
# ===========================================

# Se deve falhar quando o provedor retorna erro
FAIL_ON_PROVIDER_ERROR=false

# ===========================================
# INFRAESTRUTURA LOCAL (Docker)
# ===========================================

# RabbitMQ (mensageria local)
RABBITMQ_URL=amqp://app:app@localhost:5674

# Jaeger (observabilidade local)
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ===========================================
# LOGS E DEBUG
# ===========================================

# Nível de log
LOG_LEVEL=debug

# Habilitar logs detalhados do Mercado Pago
MERCADO_PAGO_DEBUG=true