{
  "request": {
    "method": "POST",
    "url": "/v1/payments"
  },
  "response": {
    "status": 201,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "id": "{{randomValue length=10 type='ALPHANUMERIC'}}",
      "status": "pending",
      "status_detail": "pending_waiting_payment",
      "currency_id": "BRL",
      "description": "{{jsonPath request.body '$.description'}}",
      "transaction_amount": "{{jsonPath request.body '$.transaction_amount'}}",
      "payment_method_id": "credit_card",
      "payer": {
        "email": "test@example.com"
      },
      "date_created": "{{now format='yyyy-MM-ddTHH:mm:ss.SSSZ'}}",
      "date_approved": null,
      "date_last_updated": "{{now format='yyyy-MM-ddTHH:mm:ss.SSSZ'}}",
      "date_of_expiration": null,
      "money_release_date": null,
      "operation_type": "regular_payment",
      "payment_method": {
        "id": "credit_card",
        "type": "credit_card"
      },
      "external_reference": "{{jsonPath request.body '$.external_reference'}}"
    }
  }
}
